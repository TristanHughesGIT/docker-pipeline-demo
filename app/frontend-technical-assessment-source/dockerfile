# Stage 1 — build Ionic/Angular (outputs to "www" per angular.json)
FROM node:20 AS build
WORKDIR /app

COPY package*.json ./
RUN npm ci --no-audit --no-fund --ignore-scripts

COPY . .
# if ionic CLI is needed by your project scripts:
RUN npm i -g @ionic/cli@latest && ionic build --configuration production
# or, if Angular CLI is present in devDependencies:
# RUN npx ng build --configuration production

# Stage 2 — serve with Nginx
FROM nginx:alpine
COPY --from=build /app/www /usr/share/nginx/html
EXPOSE 80
